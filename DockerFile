# Use a Python image with minimal preinstalled packages
FROM python:3.10-slim

# Install system dependencies for OpenCV and media
RUN apt-get update && apt-get install -y \
    libgl1-mesa-glx \
    libglib2.0-0 \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirement files and install them
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy everything else (including templates and model)
COPY . .

# Expose Flask port
EXPOSE 5000

# Set the entrypoint
CMD ["python", "app.py"]
